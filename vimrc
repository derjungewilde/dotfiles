" enable syntax highlighting
syntax on 

" use the dark background
set background=dark

" enable commandline completion when in command mode
set wildmenu

" use 2 chars whitespace for tabs and use proper tabs
set noexpandtab
set tabstop=2
set softtabstop=2
set shiftwidth=2

" don't wrap long lines
set nowrap

" enable autoindenting
set autoindent

" hightlight the line the cursor is on
set cursorline


" use line numbers
set number


" start scrolling 4 lines before hitting the bottom of the screen
set scrolloff=4
